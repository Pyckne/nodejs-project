<section class="section">
  <div class="container">
    {{#if logoutMessage}}
      <div class="notification is-success">Sesi칩n cerrada correctamente.</div>
    {{/if}}

    <h1 class="title">游띐 Productos disponibles</h1>

    <div class="columns is-multiline">
      {{#each products}}
        <div class="column is-one-quarter">
          <div class="card">
            <div class="card-content">
              <p class="title is-5">{{title}}</p>
              <p><strong>Precio:</strong> ${{price}}</p>
              <p><strong>Categor칤a:</strong> {{category}}</p>
              <p><strong>Descripci칩n:</strong> {{description}}</p>
              <p><strong>Stock:</strong> {{stock}}</p>
            </div>
            <footer class="card-footer">
              <a href="/products/{{id}}" class="card-footer-item">Ver</a>
              {{#if (eq ../user.role "user")}}
                <form class="card-footer-item" action="/api/carts/{{../cartId}}/products/{{id}}" method="POST">
                  <button class="button is-small is-success" type="submit">Agregar</button>
                </form>
              {{/if}}
            </footer>
          </div>
        </div>
      {{/each}}
    </div>

    <!-- Paginaci칩n -->
    <nav class="pagination is-centered mt-4" role="navigation" aria-label="pagination">
      {{#if hasPrevPage}}
        <a class="pagination-previous" href="/home?page={{prevPage}}&limit=10">Anterior</a>
      {{/if}}
      {{#if hasNextPage}}
        <a class="pagination-next" href="/home?page={{nextPage}}&limit=10">Siguiente</a>
      {{/if}}
      <ul class="pagination-list">
        <li><span class="pagination-link is-current">P치gina {{page}} de {{totalPages}}</span></li>
      </ul>
    </nav>
  </div>
</section>