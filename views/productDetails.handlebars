<h1 class="title is-3">{{product.title}}</h1>

<div class="box">
  <p><strong>Precio:</strong> ${{product.price}}</p>
  <p><strong>Categoría:</strong> {{product.category}}</p>
  <p><strong>Descripción:</strong> {{product.description}}</p>
  <p><strong>Stock disponible:</strong> {{product.stock}}</p>

  {{#if product.thumbnails.length}}
    <div style="margin-top: 1rem;">
      <img src="{{product.thumbnails.[0]}}" alt="Imagen del producto" style="max-width: 300px;">
    </div>
  {{/if}}
</div>

{{#if (eq user.role "user")}}
  <form action="/api/carts/{{cartId}}/products/{{product.id}}" method="POST">
    <button type="submit" class="button is-success">Agregar al carrito</button>
  </form>
{{/if}}