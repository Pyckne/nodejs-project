<section class="section">
  <div class="container">
    <h1 class="title is-3">üõí Detalles del Carrito</h1>

    {{#if products.length}}
      <ul>
        {{#each products}}
          <li class="box">
            <h2 class="subtitle">{{title}}</h2>
            <p><strong>Precio:</strong> ${{price}}</p>
            <p><strong>Cantidad:</strong> {{quantity}}</p>
            <p><strong>Subtotal:</strong> ${{multiply price quantity}}</p>

            <form action="/api/carts/{{../cartId}}/products/{{id}}" method="POST" class="delete-form">
              <button class="button is-danger is-small" type="submit">Eliminar</button>
            </form>
          </li>
        {{/each}}
      </ul>

      <h3 class="title is-4">üí∞ Total: ${{calculateTotal products}}</h3>

      <form action="/api/carts/{{cartId}}/purchase" method="POST">
        <button class="button is-success" type="submit">Finalizar Compra</button>
      </form>
    {{else}}
      <div class="notification is-warning">Tu carrito est√° vac√≠o.</div>
    {{/if}}

    <a class="button is-light" href="/home" style="margin-top: 1rem;">‚Üê Volver a la tienda</a>
  </div>
</section>

<script>
  // Interceptar env√≠o para realizar DELETE v√≠a fetch
  document.querySelectorAll('.delete-form').forEach(form => {
    form.addEventListener('submit', function (e) {
      e.preventDefault();
      if (!confirm('¬øEliminar este producto del carrito?')) return;

      fetch(form.action, {
        method: 'DELETE'
      })
        .then(res => res.redirected ? window.location.href = res.url : location.reload())
        .catch(err => console.error('Error eliminando producto:', err));
    });
  });
</script>